# Rust aliases
rust-create () {
    git clone https://github.com/reem/rust-bare "rust-$1" && cd "rust-$1"
    rm -rf .git README.md && sed -i '' "s/project-name/$1/g" Cargo.toml
    git init
}

# General Bash Aliases

replace () {
    find_this=$1
    shift
    replace_with=$1
    shift

    ag -l $find_this $* | xargs sed -i '' "s/$find_this/$replace_with/g"
}

cl () { cd "${1}"; ls }

clone () {
    get_this=$1
    put_it_here=$2
    git clone $1 $2
}

rustup () { curl www.rust-lang.org/rustup.sh | sudo bash }

