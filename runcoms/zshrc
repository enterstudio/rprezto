# Has to be loaded before prezto or hub completion is not loaded.
alias git="hub"

# Completion
fpath=('/usr/local/share/zsh/site-functions/' $fpath)

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

